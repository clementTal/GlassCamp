<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        >

    <RelativeLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/glass_card_margin"
            android:layout_marginTop="@dimen/glass_card_margin"
            android:layout_marginRight="@dimen/glass_card_margin"
            tools:ignore="UselessLeaf"
            >


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/deal_date" android:layout_gravity="center_vertical"
                    android:textSize="@dimen/list_elements_size"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/deal_value" android:layout_gravity="center_vertical"                        android:textSize="@dimen/list_elements_size"/>
                    android:textSize="@dimen/list_elements_size"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/deal_shop" android:layout_gravity="center_vertical"                        android:textSize="@dimen/list_elements_size"/>
                    android:textSize="@dimen/list_elements_size"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>